<view class='recommend'>
  <block wx:for="{{recommends}}" wx:key="index">
    <view class='recommend-item'>
      <image src="{{item.image}}" bindload='onImageLoad'/>
      <view><text>{{item.title}}</text></view>
    </view>
  </block>
</view>
